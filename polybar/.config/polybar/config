menu-0-0 = 
menu-0-0-exec = poweroff
menu-0-1 = 
menu-0-1-exec = reboot

format-padding = 1

[module/menu-apps]
type = custom/menu

label-open = Apps
label-close = Apps
label-separator = |
label-separator-margin = 1

expand-right = true

menu-0-0 = Internet
menu-0-0-exec = menu-open-1
menu-0-1 = Multimedia
menu-0-1-exec = menu-open-2
menu-0-2 = Coding
menu-0-2-exec= menu-open-3
menu-0-3 = System
menu-0-3-exec = menu-open-4

menu-1-0 = Firefox
menu-1-0-exec = firefox &

menu-2-0 = VLC
menu-2-0-exec = vlc &
menu-2-1 = Spotify
menu-2-1-exec = spotify &
menu-2-2 = CMus
menu-2-2-exec = xfce4-terminal -e "sh -c cmus" &

menu-3-0 = Visual Studio COde
menu-3-0-exec = code &
menu-3-1 = GitHub Desktop
menu-3-1-exec = github-desktop &

menu-4-0 = Terminal
menu-4-0-exec = xfce4-terminal &
