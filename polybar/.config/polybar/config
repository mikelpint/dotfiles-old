menu-4-1-exec = pcmanfm &
menu-4-2 = GParted
menu-4-2-exec = sudo gparted &  

format-padding = 2

[module/cmus]
type = custom/script

exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

